            users-by-username-query="SELECT USER_NAME,PASSWORD FROM BARISTA_USER WHERE USER_NAME=?"
            authorities-by-username-query="SELECT USER_ROLE FROM BARISTA_USER WHERE USER_NAME=?"
            /> -->
            <!-- <user-service>
                <user name="lokesh" password="password" authorities="CUSTOMER" />
            </user-service> -->
        </authentication-provider>
    </authentication-manager>
</beans:beans>